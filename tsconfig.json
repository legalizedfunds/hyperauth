{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"  // Add any custom type definitions directory if needed
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
